---
import { getCollection } from "astro:content"
import BaseLayout from "../layouts/BaseLayout.astro"
import Statement from "../components/Statement.astro"
const allStatements = await getCollection("statements")
const pageTitle = "list of final statements"
---

<BaseLayout pageTitle={pageTitle}>
  <ul class="sttmList">
    {allStatements.map((statement) => 
      <Statement 
        url={`/galactic-gamma/statements/${statement.slug}`} 
        person={statement.data.person}
      >
      </Statement>
    )}
  </ul>
</BaseLayout>